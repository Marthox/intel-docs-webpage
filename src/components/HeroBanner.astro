---
import { client } from "@utils/contentful_utils";

import BannerImage from "@components/BannerImage.astro";
import BannerCta from "@components/BannerCta.astro";
import type { Entry } from "contentful";

const { key, id } = Astro.props;

const data = await client.getEntry(id);

const title = data.fields.title as string;
const body = data.fields.body as string;
const image = data.fields.image as Entry;
const cta = data.fields.buttons as Entry[];
const heroIcons = data.fields.heroIcons as Entry[];
const clientsCarrousel = data.fields.clientsCarrousel as Entry[];
---

<section class="hero-banner">
    <div class="hero-text">
        <h1 class="hero-title">{title}</h1>
        <p class="sub-hero-title">{body}</p>
        <div class="hero-icons">
            {
                heroIcons &&
                    heroIcons.map((icon: any, key: number) => {
                        const title = icon.fields.title as string;
                        const iconVectorUlr = icon.fields.heroIconVector.fields
                            .file.url as string;
                        return (
                            <div class="hero-icon">
                                <img src={iconVectorUlr} alt={title} />
                                <p>{title}</p>
                            </div>
                        );
                    })
            }
        </div>
        <div class="button-container">
            {
                cta &&
                    cta.map(
                        (cta: any, key: number) =>
                            cta.fields && (
                                <BannerCta
                                    data={cta}
                                    key={key}
                                    css_class="button-hero"
                                />
                            )
                    )
            }
        </div>
    </div>
    {image && <BannerImage key={key} css_class="hero-image" data={image} />}
</section>
<div class="client-carrousel">
    <div class="carrousel-wrapper">
        {
            clientsCarrousel &&
                clientsCarrousel.map((client: any) => {
                    const clientLogo = client.fields.file.url as string;
                    return <img src={clientLogo} alt="client logo" />;
                })
        }
        {
            clientsCarrousel &&
                clientsCarrousel.map((client: any) => {
                    const clientLogo = client.fields.file.url as string;
                    return <img src={clientLogo} alt="client logo" />;
                })
        }
        {
            clientsCarrousel &&
                clientsCarrousel.map((client: any) => {
                    const clientLogo = client.fields.file.url as string;
                    return <img src={clientLogo} alt="client logo" />;
                })
        }
        {
            clientsCarrousel &&
                clientsCarrousel.map((client: any) => {
                    const clientLogo = client.fields.file.url as string;
                    return <img src={clientLogo} alt="client logo" />;
                })
        }
    </div>
</div>
<style>
    .hero-icons {
        margin: 15px 0px;
        display: flex;
        width: 100%;
        flex-direction: column;
    }
    .hero-icon {
        display: flex;
        align-items: center;
    }
    .hero-icon p {
        margin-top: 5px;
    }
    .hero-icon img {
        width: 30px;
        height: 30px;
        padding: 5px;
    }
    .hero-text {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .button-container {
        width: 100%;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }
    .hero-banner {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--secondaryColorOne);
        width: 100%;
        margin: 0 20px;
    }

    .sub-hero-title {
        padding-right: 2rem;
        padding-top: 2rem;
    }

    .hero-title {
        animation: grow 3s infinite ease-in-out;
    }

    @keyframes grow {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.02);
        }
        100% {
            transform: scale(1);
        }
    }

    @media (max-width: 768px) {
        .hero-banner {
            flex-direction: column;
            text-align: center;
        }
        .hero-text {
            margin-bottom: 40px;
        }
        .hero-title {
            margin: 0px 20px;
        }
        .sub-hero-title {
            padding: 0;
            margin: 45px 35px 15px 35px;
            text-align: center;
        }
        .button-hero {
            margin-bottom: 1rem;
        }
        .button-container {
            justify-content: center;
        }
    }

    .client-carrousel {
        max-height: 72px;
        overflow: hidden;
        position: relative;
        width: 100vw;
        margin: 20px 0px;
        background-color: rgb(250, 250, 250);
    }

    .carrousel-wrapper {
        display: flex;
        gap: 16px;
        animation: scrollAnimation 30s linear infinite;
        width: max-content;
    }

    /* Pause animation on hover */
    .client-carrousel:hover .carrousel-wrapper {
        animation-play-state: paused;
    }

    @keyframes scrollAnimation {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(calc(-50%));
        }
    }

    .client-carrousel img {
        height: 70px;
    }
</style>
