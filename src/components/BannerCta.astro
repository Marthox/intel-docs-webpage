---
const { key, data, css_class } = Astro.props;

const {
    fields: { id: id, text: text, url: url },
} = data;
---

<a class={css_class} id={id} href={url} role="button">
    {text}
</a>
<style>
    .button-cta,
    .page-cta {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 15px;
        border-radius: 10px;
        background-color: var(--primaryColorTwo);
        color: black;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

    .button-cta:hover,
    .page-cta:hover {
        background-color: black;
        color: white;
        transform: scale(1.1);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .navbar-button {
        display: inline-block;
        margin: 10px;
        padding: 10px;
        border-radius: 10px;
        background-color: var(--primaryColorTwo);
        color: black;
        border: 1px solid transparent;
        cursor: pointer;
        text-decoration: none;
        transition:
            background-color 0.3s ease-in-out,
            color 0.3s ease-in-out,
            box-shadow 0.3s ease-in-out;
    }

    .navbar-button:hover {
        background-color: black;
        color: white;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2); /* Sombra interna para efecto de profundidad */
    }

    .button-hero {
        display: inline-block;
        margin-top: 10px;
        padding: 10px;
        border-radius: 10px;
        background-color: transparent;
        color: var(--primaryColorOne);
        border: 1px solid var(--primaryColorOne);
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

    .button-hero:hover {
        background-color: var(--primaryColorOne);
        color: white;
        transform: scale(1.1);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        .button-cta {
            display: inline-block;
            margin: 10px;
            padding: 10px;
            border-radius: 10px;
        }
        .page-cta {
            width: 80%;
            text-align: center;
            margin: 1rem auto;
            display: block;
        }
    }
</style>
