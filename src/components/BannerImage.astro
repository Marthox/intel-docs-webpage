---
type CssClass = "banner-image" | "hero-image" | "event-image" | "page-image";

interface Props {
    key: string;
    data: {
        fields: {
            file: { url: string };
            description: string;
        };
    };
    css_class: CssClass;
}

const { key, data, css_class }: Props = Astro.props;

const {
    fields: {
        file: { url: image_url },
        description: image_alt,
    },
} = data;
---

<img class={css_class} src={`https://${image_url}`} alt={image_alt} />
<style>
    .banner-image {
        max-width: 40%;
        object-fit: cover;
    }
    .hero-image {
        max-width: 800px;
        width: 60%;
        height: auto;
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        border-radius: 12px;
    }
    .event-image {
        max-width: 200px;
        height: auto;
        object-fit: cover;
    }

    .page-image{
        max-width: 40%;
        object-fit: cover;
    }

    @media (max-width: 768px) {
        .banner-image {
            min-width: 90%;
        }
        .hero-image {
            min-width: 90%;
        }
        .event-image {
            min-width: 100%;
            margin-bottom: 1rem;
        }
        .page-image{
            min-width: 60%;
        }
    }
</style>
