---
type CssClass = "banner-image" | "hero-image" | "event-image" | "page-image";

const { key, data, css_class } = Astro.props;

const {
    fields: {
        file: { url: image_url },
        description: image_alt,
    },
} = data;
---

<img class={css_class} src={`https://${image_url}`} alt={image_alt} />
<style>
    .banner-image {
        max-width: 40%;
        object-fit: contain;
    }
    .hero-image {
        max-width: 620px;
        width: 50%;
        height: auto;
        object-fit: contain;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        border-radius: 12px;
    }
    .event-image {
        max-width: 200px;
        height: auto;
        object-fit: cover;
        border-radius: 12px 0 0 12px;
    }

    .page-image {
        width: 50%;
        align-self: center;
        max-height: 400px;
        object-fit: contain;
    }

    @media (max-width: 768px) {
        .banner-image {
            min-width: 90%;
        }
        .hero-image {
            min-width: 90%;
        }
        .event-image {
            min-width: 100%;
            margin-bottom: 1rem;
        }
        .page-image {
            min-width: 60%;
        }
    }
</style>
